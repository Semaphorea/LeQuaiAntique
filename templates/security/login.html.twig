{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div id="form" class="d-flex  justify-content-center mt-5">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %} 
        <div id="formcontent" class="mb-3   "> 
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div div="formcontent" class=' d-grid col-2   w-100 justify-content-center'>
    <h1 class="mb-3  font-weight-normal">Se connecter</h1>
    <label for="inputId">Email</label>
    <input type="text" value="{{ last_username }}" name="email" id="inputId" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Password</label>  
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
   

 
       {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
  

    <button class="btn btn-lg btn-primary col-1 w-100 justify-content-center" type="submit"  > 
        Sign in
    </button>
    <button class="btn btn-lg btn-primary col-1 mt-2 w-100 justify-content-center" type="submit" value='reinitialize'>
        RÃ©initialisation de mot de passe
    </button>
    <button type='button' class="btn btn-lg btn-danger mt-5 justify-content-center" onClick="window.location='nouveauclient';" >Nouveau Client</button>
     </div>
</form>
</div>
{% endblock %}
