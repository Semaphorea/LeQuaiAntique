{% extends 'base.html.twig' %}

{% block title %}Entree{% endblock %}

{% block body %}
{% block FormPage %}
  <div id="container" class='crud-container d-grid justify-content-center' >
    <h1>Entree</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entree.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entree.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entree.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                {% if entree.dataview.set.data['base64'] is defined%}
                 <td>  
                      <div class='photocrudform'  "> <img style="width:40px; heigth:auto" src='{{ entree.dataview.set.data['base64'] }}' alt='{{ entree.dataview.set.data["titre"] }}' title='{{ entree.dataview.set.data["titre"] }}'  /></div>
               </td>
                {% else %}
                <td>
                 <div class='photocrudform'  "></div>
                </td>
               {% endif%}
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ entree.Prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gestion_entree') }}">back to list</a>

    <a href="{{ path('app_crud_entree_edit', {'id': entree.id}) }}">edit</a>

    {{ include('/AdminTemplate/Crud/Plats/crud_entree/_delete_form.html.twig') }}
</div>
{% endblock %}
</div>
{% endblock %}

