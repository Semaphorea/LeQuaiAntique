{% extends 'base.html.twig' %}

{% block FormPage %}

{% block title %}Boisson index{% endblock %}

{% block body %}
<div id="container" class='d-grid justify-content-center m-5' >
    <h1>Boisson index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Photo</th> 
                <th>Prix</th>
                <th>actions</th> 
            </tr>
        </thead>
        <tbody>
        {% for boisson in boissons %}
            <tr>
                 
                <td>{{ boisson.id }}</td>
                <td>{{ boisson.titre }}</td>
                <td>{{ boisson.description }}</td>

                {% if boisson.dataview.set.data['base64'] is defined%}
                <td>  
                      <div class='photocrudform'  "> <img style="width:40px; heigth:auto" src='{{ boisson.dataview.set.data['base64'] }}' alt='{{ boisson.dataview.set.data["titre"] }}' title='{{ boisson.dataview.set.data["titre"] }}'  /></div>
               </td>
               {% else %}
                <td>
                 <div class='photocrudform'  "></div>
                </td>
               {% endif%}
                      
                <td>{{ boisson.prix }}</td>
                <td>
                    <a href="{{ path('app_crud_boisson_show', {'id': boisson.id}) }}">show</a>
                    <a href="{{ path('app_crud_boisson_edit', {'id': boisson.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_boisson_new') }}">Create new</a>
     <a href="{{ path('app_gestion_menus') }}">Back to Gestion Menu</a>
</div>
{% endblock %}
{% endblock %}
