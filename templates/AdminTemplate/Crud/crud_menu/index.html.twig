{% extends 'base.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}
    <h1>Menu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Formule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.Titre }}</td>
                <td>{{ menu.Formule ? menu.Formule|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_crud_menu_show', {'id': menu.id}) }}">show</a>
                    <a href="{{ path('app_crud_menu_edit', {'id': menu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_menu_new') }}">Create new</a>
    <a href="{{ path('app_gestion_menus') }}">Back to Gestion Menu</a>
{% endblock %}
